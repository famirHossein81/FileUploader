@model FileUploader.Models.Dt.ResetPasswordDto;

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FilesUp | reset password</title>
    <link rel="stylesheet" href="styles/style.css" />
    <link rel="stylesheet" href="styles/sign.css" />
  </head>
  <body class="flex">
    <div id="container" class="flex justify_center">
      <a id="return_home" class="flex align_center" href="index.html">Home <img src="svg/arrow-left.svg" alt=""></a>
      <main id="sign_form" class="reset_pass">
        <div class="flex flex_center flex_column">
          <img id="form_bg" src="imgs/Frame 2.png" />
          <h2>FilesUp</h2>
          <h1>Reset Password</h1>
          @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
          {
              <div class="error-message">
                  @ViewBag.ErrorMessage
              </div>
          }
          <form asp-action="ResetPassword" asp-controller="Account">
            <label for="password"
              >Password:<br />
              <input
                asp-for="Password"
                type="password"
                id="password"
                placeholder="Choose a password..."
                required
              />
            </label>
            <label for="cpassword"
              >Confirm Password:<br />
              <input
                asp-for="ConfirmPassword"
                type="password"
                id="cpassword"
                placeholder="Confirm your password"
                required
              />
            </label>
            <div class="flex font_14">
              <input type="checkbox" onclick="showPass()" />Show Password
            </div>
            <button id="signup_submit" type="submit" disabled>submit</button>
            <span class="font_14"
              >remember your password? <a href="login.html">Login</a></span
            >
          </form>
        </div>
      </main>
    </div>
  </body>
  <script src="scripts/showPass.js"></script>
</html>